                       old-locale ==1.0.*,
                       network ==2.3.*,
                       unordered-containers ==0.2.*,
                       pureMD5 ==2.1.*,
                       array ==0.4.*,
                       haskeline ==0.7.*,
                       transformers ==0.3.*

  build-tools:         hsc2hs

