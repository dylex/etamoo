executable etamoo
  hs-source-dirs:      src
  main-is:             etamoo.hs

  other-modules:       Paths_EtaMOO
                       MOO.AST
                       MOO.Builtins
                       MOO.Builtins.Common
                       MOO.Builtins.Match
                       MOO.Builtins.Network
                       MOO.Builtins.Objects
                       MOO.Builtins.Tasks
